{
  "name": "sb4-extension",
  "displayName": "sb4-extension",
  "version": "2.1.1",
  "publisher": "arrow2nd",
  "description": "Extensions for SmileBasic4",
  "author": {
    "name": "arrow2nd"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "SmileBasic",
    "petitcom"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:sb4"
  ],
  "engines": {
    "vscode": "^1.62.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sb4",
        "aliases": [
          "SB4",
          "sb4"
        ],
        "extensions": [
          ".prg"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sb4",
        "scopeName": "source.prg",
        "path": "./syntaxes/sb4.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sb4",
        "path": "./snippets/snippets.json"
      }
    ],
    "configurationDefaults": {
      "[sb4]": {
        "editor.tabSize": 1,
        "editor.insertSpaces": true
      }
    }
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arrow2nd/sb4-extension/issues",
    "email": "arrow2nd_workspace@zohomail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arrow2nd/sb4-extension"
  },
  "homepage": "https://github.com/arrow2nd/sb4-extension/blob/main/README.md",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "node": "^16.13.0"
  }
}
