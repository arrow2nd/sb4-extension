{
  "name": "sb4-extension",
  "displayName": "sb4-extension",
  "description": "Extensions for SmileBasic4",
  "publisher": "arrow2nd",
  "version": "2.0.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "SmileBasic",
    "petitcom"
  ],
  "icon": "images/icon.png",
  "bugs": {
    "url": "https://github.com/arrow2nd/sb4-extension/issues",
    "email": "arrow2nd_workspace@zohomail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arrow2nd/sb4-extension"
  },
  "activationEvents": [
    "onLanguage:sb4"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sb4",
        "aliases": [
          "SB4",
          "sb4"
        ],
        "extensions": [
          ".prg"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sb4",
        "scopeName": "source.prg",
        "path": "./syntaxes/sb4.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sb4",
        "path": "./snippets/snippets.json"
      }
    ],
    "configurationDefaults": {
      "[sb4]": {
        "editor.tabSize": 1,
        "editor.insertSpaces": true
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "typescript": "^4.1.3"
  }
}
